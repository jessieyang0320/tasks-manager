<p>
  	<strong> Item:</strong>
  	<%=item.content%>
 </p>



<div class="row clearfix">
	<% if item.completed? %>
	 <div class="complete">
	   <%= link_to 'Mark as completed', complete_todolist_item_path(@todolist, item.id),
              method: :patch%>             
     </div>
     <div class="item">
     	<p sytle='opacity: 0.4;'><strike><%=item.content%></strike></p>
     </div>

     <div class="trash">
     	<%= link_to 'delete item',[item.todolist,item],
              method: :delete,
              data: { confirm: 'Are you sure?'} %>
     </div>
	<% else %>
	<div class="complete">
	   <%= link_to 'Mark as completed', complete_todolist_item_path(@todolist, item.id),
              method: :patch%>             
     </div>
     <div class="item">
     	<p sytle='opacity: 0.4;'><%=item.content%></p>
     </div>

     <div class="trash">
     	<%= link_to 'delete item',[item.todolist,item],
              method: :delete,
              data: { confirm: 'Are you sure?'} %>
     </div>

	<% end %>

</div>